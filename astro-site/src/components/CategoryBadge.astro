---
interface Props {
	categories: string[];
}

const { categories } = Astro.props;

function slugify(text: string) {
	return text.toLowerCase().replace(/\s+/g, "-");
}
---

<div class="flex flex-wrap gap-2">
	{
		categories.map((category) => (
			<a
				href={`/category/${slugify(category)}/`}
				class="inline-block px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-sans font-medium hover:bg-orange-200 no-underline transition-colors"
			>
				{category}
			</a>
		))
	}
</div>
